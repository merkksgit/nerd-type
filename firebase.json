{
  "functions": {
    "source": "functions",
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"],
    "runtime": "nodejs18"
  },
  "hosting": {
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "functions/**"],
    "rewrites": [
      {
        "source": "/scoreboard",
        "function": "scoreboard"
      }
    ]
  }
}
